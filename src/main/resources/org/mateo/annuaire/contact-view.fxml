<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="589.0" prefWidth="359.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="org.mateo.annuaire.ContactController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ListView prefHeight="212.0" fx:id="contactListView" prefWidth="281.0" />
   <HBox prefHeight="32.0" prefWidth="281.0">
      <children>
         <Label prefHeight="25.0" prefWidth="56.0" text="Prénom : ">
            <HBox.margin>
               <Insets left="20.0" right="20.0" />
            </HBox.margin>
         </Label>
         <TextField prefHeight="26.0" fx:id="prenomField" prefWidth="186.0" />
      </children>
   </HBox>
   <HBox prefHeight="32.0" prefWidth="281.0">
      <children>
         <Label prefHeight="25.0" prefWidth="56.0" text="Nom : ">
            <HBox.margin>
               <Insets left="20.0" right="20.0" />
            </HBox.margin>
         </Label>
         <TextField prefHeight="26.0" fx:id="nomField" prefWidth="186.0" />
      </children>
   </HBox>
   <HBox prefHeight="32.0" prefWidth="281.0">
      <children>
         <Label prefHeight="25.0" prefWidth="150.0" text="Numéro de téléphone : ">
            <HBox.margin>
               <Insets left="5.0" right="20.0" />
            </HBox.margin>
         </Label>
         <TextField prefHeight="26.0" fx:id="numeroTelephoneField" prefWidth="184.0" />
      </children>
   </HBox>
   <Button mnemonicParsing="false" onAction="#addContact" text="Nouveau contact" />
   <Button mnemonicParsing="false" onAction="#deleteContact" text="Retirer contact" />
   <Button mnemonicParsing="false" onAction="#refreshContactList" text="Actualiser" />
</VBox>
